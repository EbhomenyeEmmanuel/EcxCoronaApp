<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="homeInfo"
            type="com.esq.ecxcoronaapp.domain.model.HomeListModel" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#55B2EBF2"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageViewForCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/title"
                android:layout_alignBottom="@id/subtitle"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin_8dp"
                android:background="#55B2EBF2"
                android:src="@drawable/ic_pie_chart_black_24dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_toEndOf="@id/imageViewForCard"
                android:text="How it Spreads"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_alignParentEnd="true"
                android:textStyle="normal"
                android:layout_toEndOf="@id/imageViewForCard"
                android:text='@{"₦" + homeInfo.subTitle, default="₦8000.00"}'
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textColor="@android:color/darker_gray" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>