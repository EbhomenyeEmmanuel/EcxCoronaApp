<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#EBEBEB"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewForCard"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@id/title"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/margin_8dp"
            android:background="#55B2EBF2"
            android:src="@drawable/news_images1"
            android:contentDescription="@string/image_from_news" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_8dp"
            android:layout_toEndOf="@id/imageViewForCard"
            android:text="@string/dummy_text"
            android:textAllCaps="true"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/dummyTextColor" />

        <TextView
            android:id="@+id/learn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:text="@string/learn_more"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/colorBlack"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_below="@id/learn_more"
            android:layout_alignStart="@id/learn_more"
            android:layout_alignEnd="@id/learn_more"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:background="@color/colorPrimary" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>